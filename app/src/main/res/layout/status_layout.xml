<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"

        app:cardUseCompatPadding="true"
        android:background="@drawable/task_layout"
        android:id="@+id/card_view">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/task_component_color"
            android:id="@+id/r_leyout"
         android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="12dp"


            >
            <RelativeLayout
                android:layout_width="82dp"
                android:layout_height="87dp"
                android:id="@+id/lay11">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/status_image"
                android:layout_width="70dp"
                android:layout_height="70dp"

                android:scaleType="fitXY"
                app:shapeAppearanceOverlay="@style/rounded_corner"/>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/success_svgrepo_com"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="87dp"
                android:layout_toRightOf="@+id/lay11"
                android:layout_toLeftOf="@+id/shareIcon"
                android:layout_marginLeft="5dp"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/status_img_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Imageine.fgebce.JPG"
                        android:textColor="@color/textcolor"
                        android:textSize="18sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/status_img_originalSize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="36 KB"
                        android:textColor="@color/textcolor"
                        android:textSize="16sp"/>

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-->"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/textcolor"
                        android:textSize="20sp"/>
                    <TextView
                        android:id="@+id/status_img_customSize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="16 KB"
                        android:layout_marginLeft="10dp"
                        android:textColor="#13D61B"
                        android:textSize="19sp"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/status_img_width"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1920"
                        android:textColor="@color/textcolor"
                        android:textSize="18sp"/>

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="X"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/textcolor"
                        android:textSize="20sp"/>
                    <TextView
                        android:id="@+id/status_img_height"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1200"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/textcolor"
                        android:textSize="18sp"/>


                </LinearLayout>








            </LinearLayout>







            <ImageView
                android:id="@+id/shareIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/share" />



        </RelativeLayout>






    </androidx.cardview.widget.CardView>


</RelativeLayout>